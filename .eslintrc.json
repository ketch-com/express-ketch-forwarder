{
    "env": {
        "node": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": [
        "plugin:github/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "jest",
        "@typescript-eslint"
    ],
    "rules": {
        "no-unused-vars": "off",
        "no-shadow": "off",
        "@typescript-eslint/no-shadow": ["error"]
    }
}
